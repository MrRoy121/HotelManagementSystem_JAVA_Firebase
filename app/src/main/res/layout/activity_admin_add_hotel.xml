<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#9FFDF4"
    android:layout_height="match_parent"
    tools:context=".admin.AdminAddHotel">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Hotel"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/img"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:padding="3dp"
        android:scaleType="centerInside"/>

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:inputType="text"
                android:backgroundTint="#2B2B2B"
                android:textColorHint="#2B2B2B"/>


            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Address"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:inputType="text"
                android:backgroundTint="#2B2B2B"
                android:textColorHint="#2B2B2B"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/room"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="Number of Rooms"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:backgroundTint="#2B2B2B"
                    android:textColorHint="#2B2B2B"/>


                <EditText
                    android:id="@+id/per"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="Per Night Cost"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:backgroundTint="#2B2B2B"
                    android:textColorHint="#2B2B2B"/>
            </LinearLayout>



        <EditText
            android:id="@+id/det"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Details About The Hotel .."
            android:padding="10dp"
            android:layout_margin="10dp"
            android:inputType="text"
            android:backgroundTint="#2B2B2B"
            android:textColorHint="#2B2B2B"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Add Image for Hotel: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/browse"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="#515151"
        android:text="Browse Image"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</LinearLayout>


            <Button
                android:id="@+id/add"
                android:text="ADD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

        </LinearLayout>

</FrameLayout>